<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pizza_half"

    android:orientation="vertical"

    tools:context="com.example.food.orderup.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical"
        android:weightSum="3"


        >

        <TextView
            android:id="@+id/i1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"

            android:alpha=".7"
            android:background="@drawable/button_cornor_white"

            android:backgroundTint="@color/black_trans"

            android:drawableLeft="@drawable/tray"


            android:drawableTint="@android:color/white"


            android:gravity="center"


            android:text="Order up"

            android:textColor="@android:color/white"

            android:textSize="35dp"


            />


        <Button
            android:id="@+id/b1"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_marginBottom="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"


            android:layout_weight=".7"


            android:background="@drawable/button_cornor_white"
            android:gravity="center"
            android:padding="10dp"

            android:text="Foodies here"


            android:textColor="@color/primary"


            android:textSize="20dp" />


        <Button
            android:id="@+id/b2"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_margin="30dp"


            android:layout_weight=".7"


            android:background="@drawable/button_cornor_white"
            android:gravity="center"
            android:padding="10dp"
            android:text=" Chef here "
            android:textColor="@color/primary"


            android:textSize="20dp"


            />


    </LinearLayout>


</LinearLayout>
