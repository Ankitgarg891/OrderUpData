<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.food.orderup.chef_login"

    android:background="@drawable/splash_image"
    android:fitsSystemWindows="true">



<View
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scrim_gradient" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginTop="0dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="26dp"
    android:weightSum="16.5">

    <TextView
        android:id="@+id/i1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="4"
        android:background="@drawable/button_corner_10dp"
        android:backgroundTint="@android:color/black"
        android:drawableLeft="@drawable/tray_vector_white"
        android:drawableTint="@android:color/white"
        android:gravity="center"
        android:text="Chef Login"
        android:textColor="@android:color/white"
        android:textSize="35dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="11.5"
        android:background="@drawable/button_corner_10dp"
        android:backgroundTint="@android:color/white"
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="4">

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Fill your details below "
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/r_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/black"
            android:drawableLeft="@drawable/user_icon"
            android:drawablePadding="10dp"
            android:hint="Restaurant id"
            android:inputType="textEmailAddress|textAutoComplete"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/r_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/black"
            android:drawableLeft="@drawable/lock_icon"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/view_orders"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_corner_10dp"
            android:gravity="center"
            android:text=" View Orders "
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>



</LinearLayout>

</FrameLayout>