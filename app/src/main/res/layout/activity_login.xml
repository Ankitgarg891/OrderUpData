<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    tools:context="com.example.food.orderup.LoginActivity"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/pizza_half"

        android:orientation="vertical"


        android:padding="26dp"
        android:weightSum="16"


        >


        <TextView
            android:id="@+id/i1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="3.5"

            android:alpha=".7"
            android:background="@drawable/button_cornor_white"

            android:backgroundTint="@color/black_trans"

            android:drawableLeft="@drawable/tray"


            android:drawableTint="@android:color/white"


            android:gravity="center"


            android:text="Order up"

            android:textColor="@android:color/white"

            android:textSize="35dp"


            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="11.5"
            android:alpha=".9"
            android:background="@drawable/button_cornor_white"
            android:backgroundTint="@color/primary"
            android:orientation="vertical"

            android:padding="10dp"


            android:weightSum="4">

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="0dp"


                android:layout_weight="1"

                android:gravity="center"
                android:text="Fill your details below "
                android:textColor="@android:color/black"
                android:textSize="20dp" />


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"


                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"


                android:drawableLeft="@drawable/user_icon"
                android:drawablePadding="20dp"
                android:drawableTint="@color/black_trans"
                android:hint="Email"


                android:paddingLeft="10dp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/white_trans"


                android:textSize="21dp"


                />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"


                android:layout_weight="1"
                android:backgroundTint="@android:color/white"


                android:drawableLeft="@drawable/lock"
                android:drawablePadding="20dp"
                android:drawableTint="@color/black_trans"
                android:hint="Password"
                android:inputType="textPassword"

                android:paddingLeft="10dp"
                android:textColor="@android:color/white"

                android:textColorHint="@color/white_trans"


                android:textSize="20sp"


                />
            <!--

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".5"
                        android:text="Forget Password  "
                        android:textColor="@android:color/white"
                        android:gravity="center|end"

                        android:textSize="18dp"

                        android:id="@+id/forget_password"

                        />

            -->


            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:layout_margin="15dp"


                android:layout_weight="1"


                android:background="@drawable/button_cornor_white"
                android:gravity="center"
                android:padding="10dp"
                android:text=" LOGIN "
                android:textColor="@color/primary"


                android:textSize="20dp"


                />


        </LinearLayout>


        <TextView
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"

            android:layout_weight="1"
            android:gravity="center"

            android:text="Don't have an account? Sign Up"
            android:textColor="@android:color/white"


            android:textSize="20dp" />


    </LinearLayout>


</FrameLayout>

